<Window x:Class="WpfPortScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Сканер портов"
        Height="500"
        Width="470">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 0 10">
            <Label Content="IP адрес" />
            <TextBox x:Name="txtIP"
                     Text="127.0.0.1"
                     Margin="0 0 10 0" 
                     FontSize="15"/>
            <xctk:IntegerUpDown x:Name="numStart"
                                Minimum="1"
                                Maximum="1000"
                                Value="1"
                                Width="100"
                                Margin="0 0 10 0" />
            <TextBlock Text="до"
                       VerticalAlignment="Center" />
            <xctk:IntegerUpDown x:Name="numEnd"
                                Minimum="1"
                                Maximum="1000"
                                Value="100"
                                Width="100"
                                Margin="10 0 10 0" />
            <Button x:Name="btnScan"
                    Content="Сканировать"
                    Click="BtnScan_Click"/>
        </StackPanel>

        <ListView x:Name="listResults"
                  Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Порт"
                                    Width="100"
                                    DisplayMemberBinding="{Binding Port}" />
                    <GridViewColumn Header="Статус"
                                    Width="100"
                                    DisplayMemberBinding="{Binding Status}" />
                </GridView>
            </ListView.View>
        </ListView>
        
        <ProgressBar x:Name="progressBar"
                     Grid.Row="2"
                     Height="20"
                     Margin="0,0,0,10" />
    </Grid>
</Window>